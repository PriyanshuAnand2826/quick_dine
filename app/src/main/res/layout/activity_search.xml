<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="@+id/search_cardview"
        app:layout_constraintStart_toStartOf="@+id/search_cardview"
        app:layout_constraintTop_toBottomOf="@+id/search_cardview"
        app:srcCompat="@drawable/search_assset" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/quicksand_bold"
        android:paddingStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="10dp"
        android:text="@string/search_for_your_favourite_meal"
        android:textColor="#EE6E33"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/search_cardview"
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:neumorph_shadowColorDark="@color/orange_50"
        app:neumorph_shadowColorLight="@color/orange_50"
        tools:ignore="TextContrastCheck">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="26dp"
            android:layout_marginStart="30dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/search" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/transparent"
            android:ems="10"
            android:inputType="text"
            android:maxLength="20"
            android:maxLines="1"
            android:textColorHint="@color/blue_grey_1000"
            android:textColor="@color/grey_700"
           android:hint="Search meal..."/>
    </soup.neumorphism.NeumorphCardView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_home_navigation"
        android:orientation="horizontal"
        android:padding="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/home_grey" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/search_orange" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/profile" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>